using [UI]
using [UI].Layout
using [UI].Widgets
using [UI].Styles
using [UI].Elements
using [CORE]
using [CORE].Actions

const title: "IT::Layers"

[PATH].Window: IsWindow {
    Text: {$title}
    (WidgetState, Opened)
    Content: StyleBorderSurfaceTransparent {
        Container: IsVBox, FillHeightOne, FillWidthOne, AlignFill, PaddingNone {
            VSB: VScrollBox, FillHeightOne, FillWidthOne, AlignFill, PaddingNone {
                HSB: HScrollBox, FillWidthOne, FillWidthOne, AlignFill, PaddingNone {
                    Collection: IsVBox, FillHeightOne, FillWidthOne, AlignFill, PaddingNone {
                        Collection
                        [IFC].Layer
                    }
                }
            }
            BottomBar: StyleBorderSurfaceLow, VAlignBottom, HAlignFill, PaddingNone {
                Order: {1}
                Container: IsHBox, FillWidthOne, AlignCenterLeft, PaddingNone {
                    ButtonAddLayers: ButtonAdd {
                        ActionAddLayers: ActionAdd {
                            (ButtonState, Clicked)
                            [IFC].Layer
                        }
                    }
                }
            }
        }
    }
    ActionEnableCheckBox: ActionWidgetVisible {
        (WidgetState, Closed)
        Target: {"<"}
    }
    ActionUncheckCheckBox: ActionCheckBoxUncheck {
        (WidgetState, Closed)
        Target: {"<"}
    }
}
