prefab [UI].Elements.ToggleIcon: IsWidget, ToggleRoundOutlined, PaddingNormal, AlignCenter {
    Container: IsHBox {
        Icon: IconButton {}
    }
}

prefab [UI].Elements.ToggleIconText: ToggleIcon {
    Container.Icon: PaddingCenterButtonContent {}
    Container.Label: TextButton, PaddingRightOnlyButtonContent {
        Localized
        Order: {1}
    }
}

prefab [UI].Elements.Radio: IsWidget, ToggleRoundOutlined, PaddingNormal, AlignFill {
    Container: IsHBox {
        Icon: IsIcon {}
        Label: TextButton, PaddingRightOnlyButtonContent {Order: {1}}
    }
    ActionIconChecked: ActionSwitchPairs {
        (CheckBoxState, Checked)
        Code: {"[IsA], [UI].Widgets.IconRadioChecked"}
        Target: {"Container.Icon"}
    }
}

prefab [UI].Elements.MenuContainer: IsVBox, AlignCenter, PaddingNormal {MenuContent}